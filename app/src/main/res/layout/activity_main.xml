<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.customtailors.app.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/custom_image"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Custom Tailor"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:fontFamily="sans-serif-smallcaps" />


    <TextView
        android:id="@+id/description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="and"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textAllCaps="true"
        />


    <TextView
        android:id="@+id/description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/description2"
        android:layout_centerHorizontal="true"
        android:text="Keep Calm"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textAllCaps="true"
        />

    <TextView
        android:id="@+id/description3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/description2"
        android:text="Suit Up "
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textAllCaps="true"
        />

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Contact : 987654321"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/lastLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/contact"
        android:text="Manhattan"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lastLine"
        android:text="1st block, Central Park"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/firstLine"
        android:layout_centerHorizontal="true"
        android:text="Address:"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

</RelativeLayout>
